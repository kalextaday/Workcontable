@model List<WebApplication2.Models.TableViewModels.DetPreTableViewModel>
@{
    ViewBag.Title = "Detalle Presupuesto";

    int i = 1;

    int vid_presu = ViewBag.id_presu;
}

<br>
<br>
<br>
<br>

<div class="row">
    <h3>@ViewBag.Title</h3>
</div>
<br />

<div class="row">
    <div class="col-md-12">
        <input type="button" class="btn btn-primary" onclick="document.location.href='@Url.Content("~/TransPresu/Add/"+@vid_presu)'" value="NuevaTransaccion" />
    </div>
</div>
<br />

<div>
    <div class="col-lg-12">
        <table class="table table-bordered table-responsive">
            <tr>
                <th>#</th>
                <th>Tipo</th>
                <th>Rubro</th>
                <th>Fecha</th>
                <th>Subtotal</th>
                <th>Impuesto</th>
                <th>Total</th>
            </tr>
            @foreach (var oElemento in Model)
            {
                <tr>
                    <td>@i</td>
                    <td>@oElemento.tipo_nombre</td>
                    <td>@oElemento.rubro_nombre</td>
                    <td>@oElemento.fecha</td>
                    <td>@oElemento.subtotal</td>
                    <td>@oElemento.impuesto</td>
                    <td>@oElemento.total</td>
                </tr>
                i++;
            }
        </table>
    </div>
</div>


