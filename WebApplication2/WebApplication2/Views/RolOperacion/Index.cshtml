@model List<WebApplication2.Models.TableViewModels.PermisoTableViewModel>
@{
    ViewBag.Title = "Rol-Operaciones";
    
    ViewBag.Rol = Model.FirstOrDefault().rol_nombre;

    /*
    if (ViewBag.rol == 1)
    {
